<div id="district_form" class="w3-modal w3-animate-opacity" style="display: block">
    
<%= simple_form_for :district_data , :url => event_district_modal_path, :method => :get, html:{autocomplete:'off'} do |f| %>
    <%= f.input :district_id, label: false do  %>
        <div class="modal-dialog modal-dialog-scrollable" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">District Selection</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span onclick="document.getElementById('district_form').style.display='none'"
                    >&times;</span>
                </button>
            </div>
            <div class="modal-body">               
                <table class="table table-striped table-condensed table-hover " id="find-table">
                    <thead class="w3-black">
                        <tr>
                            <th>District</th>
                            <th> Select</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @districts.each_with_index  do |district,index| %>
                            <tr>
                                <td><%= district %></td>
                                <td>
                                    <label>
                                    <input name="district_data[district_id]" type="checkbox"  value="<%= district.name %>" />
                                    <span> </span>
                                    </label>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
                <input type="hidden" name="val" value="status"/>

            </div>
            <div class="modal-footer">
                <span onclick="document.getElementById('district_form').style.display='none'"
                 class="btn btn-md btn-secondary" >Close</span>
                 <button class=" btn btn-md btn-primary" id="district-data">Next Step</button>


            </div>
            </div>
        </div>
    <% end %>
<% end %>

 
</div>



 <style>
    .bottom-btn{
      margin-top: 5%;
      /*margin-left: 55%;*/
    }
  </style>


  <script>

       $( "#district-data" ).click(function() {
        var url = "<%= event_region_modal_url %>";
        // var regions = [$("input[type=checkbox][name='region_data[region_id]']").val()];

        var regions =  $("#find-table input:checkbox:checked").map(function(){
                            return $(this).val();
                        }).get();
        console.log("we are here with region ids = "+regions);

        $.ajax({
            type: "GET",
            url: url,
            dataType: 'script',
            data: {
                region_id: regions
            }, // serializes the form's elements.
            success: function(data)
            {
                $("#event_region_modal").html(data);
                // alert("success")
            }
        });
        return false;

    });

  </script>