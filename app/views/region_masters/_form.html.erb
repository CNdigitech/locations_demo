<div class="my-form col-lg-6 col-lg-offset-3">
  
  <%= simple_form_for(@region_master) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%#= f.input :region_id %>
      <%#= f.input :country_code, collection: @countries, label_method: :name, value_method: :name, label:"Country"  %>
      <%= f.input :country_code,as: :country, label:"Country"  %>
      <%= f.input :name %>
      <%= f.input :capital %>
      <%= f.input :capital_gps %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class:"btn btn-md btn-primary" %>
      <%= link_to 'Back', region_masters_path, class:"btn btn-md btn-outline-dark"  %>
    </div>
  <% end %>
</div>