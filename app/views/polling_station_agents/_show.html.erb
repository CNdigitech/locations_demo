<div id="pa_address_form" class="w3-modal w3-animate-opacity" style="display: block"> 
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agent Address Detail</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span onclick="document.getElementById('pa_address_form').style.display='none'"
                    >&times;</span>
                </button>
            </div>
            <div class="modal-body">               
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <tbody>
                            <tr>
                                <th>Contact number</th>
                                <td><%= @polling_station_agent.phone_number %></td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td><%= @polling_station_agent.email_address %></td>
                            </tr>
                            <tr>
                                <th>HQ address line 1</th>
                                <td><%= @polling_station_agent.hq_address_line_1 %></td>
                            </tr>
                            <tr>
                                <th>HQ address line 2</th>
                                <td><%= @polling_station_agent.hq_address_line_2 %></td>
                            </tr>
                             <tr>
                                <th>Region</th>
                                <td><%= @polling_station_agent.region_id %></td>
                            </tr>
                             <tr>
                                <th>Town</th>
                                <td><%= @polling_station_agent.town_id %></td>
                            </tr>
                             <tr>
                                <th>Constituency</th>
                                <td><%= @polling_station_agent.constituency_id %></td>
                            </tr>
                            <tr>
                                <th>City</th>
                                <td><%= @polling_station_agent.city %></td>
                            </tr>
                            <tr>
                                <th>Nearest landmark</th>
                                <td><%= @polling_station_agent.nearest_landmark %></td>
                            </tr>
                            <tr>
                                <th>GPS</th>
                                <td><%= @polling_station_agent.gps_coordinates %></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <span onclick="document.getElementById('pa_address_form').style.display='none'"
                    class="btn btn-md btn-secondary btn-block" >Close</span>

            </div>
        </div>
    </div>
</div>


