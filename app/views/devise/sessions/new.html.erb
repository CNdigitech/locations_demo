<div class="login-screen col-12">
  <div class=" login-text col-7 float-left">
    <div class="row">
      <div class="phone-img col-bg-4">
        <%= image_tag "phone.svg" %>
      </div>
      <div class="txt col-7">
        <div id="main-txt"><b>Location App Demo</b></div>
        <h6>
          Lorem ipsum dolor sit amet, consectetur adipiscing elit.
          Ultrices mauris sem eu a nisl. Et, ipsum odio quam amet, leo, 
          vestibulum. Venenatis, et urna nulla ut nulla. 
        </h6>
      </div>
    </div>
  </div>
  <div class="login-form-space col-5 float-right">
    <div class="row buffer">
     <h6>
          Lorem ipsum dolor sit amet, consectetur adipiscing elit.
          Ultrices mauris sem eu a nisl. Et, ipsum odio quam amet, leo, 
          vestibulum. Venenatis, et urna nulla ut nulla. 
        </h6> <h6>
          Lorem ipsum dolor sit amet, consectetur adipiscing elit.
          Ultrices mauris sem eu a nisl. Et, ipsum odio quam amet, leo, 
          vestibulum. Venenatis, et urna nulla ut nulla. 
        </h6> 
    </div>
    <div class=" login-form-card ">
      <h2><b>Log in</b></h2>
      <% if devise_error_messages? || alert %>
        <div class="form-errors red lighten-1">
          <%= devise_error_messages! %>
          <%= alert %>
        </div>
      <% end %>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class:"btn btn-md btn-primary " %>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
    </div>
    <div class="row buffer">
    </div>
  </div>
</div>


<style>
  .login-screen{
    background-image: url('/assets/bg2.svg');
    background-size: cover;
    object-fit: cover;
    height: 100vh;
  }
  .login-form-card{
    width: 40%;
    margin: 0 auto;
    padding: 10%;
    background-color: white; -webkit-box-shadow: 0px 11px 40px -15px rgba(188,188,188,0.93);
    -moz-box-shadow: 0px 11px 40px -15px rgba(188,188,188,0.93);
    box-shadow: 0px 11px 40px -15px rgba(188,188,188,0.93); width: 90%;  margin: 0 auto;
  }
  .login-text{
    padding: 150px 100px 50px 50px;
    font-weight: 400 ;
  }
  #main-txt{
    font-size: 58px;
    line-height: 60px;
  }
  .buffer{
    height:100px;
    visibility: hidden;
    /* display: visibility; */
  }

</style>



