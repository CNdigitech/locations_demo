
   
    <div class="my-content"> 
        <h2> Countries </h2>
        <div class="new-btn float-right">
            <%= link_to new_country_master_path, class:"btn btn-outline-dark" do %>
                <span class="glyphicon glyphicon-plus"></span>
                New Country
            <% end %>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Continent code</th>
                    <th>Assigned code</th>
                    <th>Name</th>
                    <th>Active status</th>
                    <th>Del status</th>
                    <th colspan="2"></th>
                </tr>
                </thead>

                <tbody>
                <% @country_masters.each_with_index do |country_master, index| %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= country_master.continent_code %></td>
                        <td><%= country_master.assigned_code %></td>
                        <td><%= country_master.name %></td>
                        <td><%= country_master.active_status %></td>
                        <td><%= country_master.del_status %></td>
                        <td><%= link_to 'Edit', edit_country_master_path(country_master), class:"btn btn-sm btn-default" %></td>
                        <td><%= link_to 'Destroy', country_master, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-default" %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
