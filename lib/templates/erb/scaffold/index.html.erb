
   
    <div class="my-content"> 
        <h2> <%= plural_table_name %></h2>
        <div class="new-btn float-right">
            <%%= link_to new_<%= singular_table_name %>_path, class:"btn btn-outline-dark" do %>
                <span class="glyphicon glyphicon-plus"></span>
                New 
            <%% end %>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                <tr>
                    <th>#</th>
                <% attributes.each do |attribute| -%>
                <th><%= attribute.human_name %></th>
                <% end -%>
                    <th colspan="3"></th>
                </tr>
                </thead>

                <tbody>
                <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
                    <tr>
                    <% attributes.each do |attribute| -%>
                        <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
                    <% end -%>
                        <td><%%= link_to 'Show', <%= singular_table_name %>, class:"btn btn-sm btn-default" %></td>
                        <td><%%= link_to 'Edit', edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class:"btn btn-sm btn-default" %></td>
                        <td><%%= link_to 'Destroy', <%= singular_table_name %>, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-default" %></td>
                    </tr>
                <%% end %>
                </tbody>
            </table>
        </div>
    </div>
